<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context=".FeedbackActivity">

    <TextView
        android:id="@+id/layout_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:text="Really appreciate your feedback....."
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/nunito_semibold"
        android:textSize="25sp"/>

    <RelativeLayout
        android:id="@+id/layout_1"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/border_button">

        <TextView
            android:id="@+id/title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:text="If you don't see your problem in suggestions please use below form to give that problem"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="18sp"/>


        <EditText
            android:id="@+id/problem_input"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@+id/title_1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_background"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="top|left"
            android:hint=" Your Problem "
            android:inputType="textMultiLine"
            android:paddingLeft="25dp"
            android:paddingTop="12dp"
            android:paddingRight="25dp"
            android:paddingBottom="12dp"
            android:textSize="16sp" />



        <Button
            android:id="@+id/post_problem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/problem_input"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/border_button"
            android:fontFamily="@font/nunito_semibold"
            android:text="Submit Problem"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_2"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="314dp"
        android:background="@drawable/border_button">


        <TextView
            android:id="@+id/title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:text="If you need to give feedback please use below form to give the feedback"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="18sp"/>


        <EditText
            android:id="@+id/feedback_input"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@+id/title_2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_background"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="top|left"
            android:hint=" Your Feedback "
            android:inputType="textMultiLine"
            android:paddingLeft="25dp"
            android:paddingTop="12dp"
            android:paddingRight="25dp"
            android:paddingBottom="12dp"
            android:textSize="16sp" />



        <Button
            android:id="@+id/post_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feedback_input"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/border_button"
            android:fontFamily="@font/nunito_semibold"
            android:text="Submit Feedback"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>


    </RelativeLayout>



</RelativeLayout>